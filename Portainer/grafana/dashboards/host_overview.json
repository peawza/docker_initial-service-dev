{"title": "Host Overview (Node Exporter)", "uid": "host-overview", "timezone": "browser", "schemaVersion": 38, "version": 1, "panels": [{"type": "stat", "title": "CPU Usage % (Host)", "gridPos": {"h": 6, "w": 6, "x": 0, "y": 0}, "targets": [{"expr": "(1 - avg(rate(node_cpu_seconds_total{mode=\"idle\"}[5m]))) * 100", "legendFormat": "CPU"}]}, {"type": "stat", "title": "Memory Usage % (Host)", "gridPos": {"h": 6, "w": 6, "x": 6, "y": 0}, "targets": [{"expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100", "legendFormat": "Mem"}]}, {"type": "timeSeries", "title": "Disk Usage (Root FS)", "gridPos": {"h": 8, "w": 12, "x": 0, "y": 6}, "targets": [{"expr": "(node_filesystem_size_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\"} - node_filesystem_avail_bytes{mountpoint=\"/\",fstype!~\"tmpfs|overlay\"})", "legendFormat": "Used bytes"}]}, {"type": "timeSeries", "title": "Network I/O (Host)", "gridPos": {"h": 8, "w": 12, "x": 0, "y": 14}, "targets": [{"expr": "rate(node_network_receive_bytes_total{device!~\"lo\"}[5m])", "legendFormat": "{{device}} RX"}, {"expr": "rate(node_network_transmit_bytes_total{device!~\"lo\"}[5m])", "legendFormat": "{{device}} TX"}]}], "templating": {"list": []}, "time": {"from": "now-1h", "to": "now"}}